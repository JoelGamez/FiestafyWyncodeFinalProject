<!DOCTYPE html>
<html>
  <head>
    <title>EventApp</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header>
      <% if current_user %>
        <p>Welcome, <%= current_user.email %>  |
        <%= link_to "My Profile", edit_user_registration_path %>
        <%= link_to "Home", authenticated_user_root_path %>
        <%= link_to "My Events/Requests", booking_requests_path %>
        <%= link_to "Sign Out", destroy_user_session_path, method: :delete %> </p>
        <%= form_tag() do %>
          <%= text_field_tag :company %>
          <%= submit_tag 'Search' %>
        <% end %>
      <% elsif current_company %>
        <p>Welcome, <%= current_company.email %>  |
        <%= link_to "Company Profile", edit_company_registration_path %>
        <%= link_to "Home", authenticated_company_root_path %>
        <%= link_to "My Events",  booking_requests_path  %>
        <%= link_to "Create Item", new_inventory_item_path %>
        <%= link_to "Sign Out", destroy_company_session_path, method: :delete %> </p>
      <% end %>


    </header>
    <%= yield %>
  </body>
</html>
