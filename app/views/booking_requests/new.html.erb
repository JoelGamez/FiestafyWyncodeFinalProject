<canvas id="canvas">


</canvas>

<div class="form-container-users">

<div class= "form-group">
  <h3>New Event</h3>
  <%= form_with(model: @booking_request, local: true) do |form| %>
    <div class="field">
      <%= form.label :venue_name %>
      <%= form.text_field :venue_name %>
    </div>
    <div class="field">
      <%= form.label :location %>
      <%= form.text_field :location %>
    </div>
    <div class="field">
      <%= form.label :start_time %>
      <%= form.datetime_select :start_time %>
    </div>
    <div class="field">
      <%= form.label :end_time %>
      <%= form.datetime_select :end_time %>
    </div>
    <div class="field">
      <%= form.label :comment %>
      <%= form.text_area :comment, value: 'No elevator? Venue is outdoors? Let your vendor know anything that might be useful' %>
    </div>
    <div class="actions">
      <%= form.submit %>
    </div>
  <% end %>
</div>

</div>
