<h2><%= "Event ##{@booking_request.id}" %></h2>



<%= form_with(model: @booking_request, local: true) do |form| %>

  <div class="field">
    <%= form.label :venue_name %>
    <%= form.text_field :venue_name %>
  </div>
  <div class="field">
    <%= form.label :location %>
    <%= form.text_field :location %>
  </div>
  <div class="field">
    <%= form.label :start_time %>
    <%= form.datetime_select :start_time %>
  </div>
  <div class="field">
    <%= form.label :end_time %>
    <%= form.datetime_select :end_time %>
  </div>
  <div class="field">
    <%= form.label :comment %>
    <%= form.text_field :comment %>
  </div>
  <div class="actions">
    <%= form.submit %>
  </div>


<% end %>
